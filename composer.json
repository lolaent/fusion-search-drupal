{
    "name": "lucidworks/fusion-search-drupal",
    "description": "Offers an implementation of the Search API that uses a Fusion backend for providing the site search experience for Drupal users.",
    "type": "drupal-module",
    "homepage": "https://www.drupal.org/project/<TBD>",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Markus Kalkbrenner",
            "homepage": "https://www.drupal.org/u/mkalkbrenner"
        },
        {
            "name": "Other contributors",
            "homepage": "https://www.drupal.org/node/982682/committers"
        }
    ],
    "support": {
        "issues": "https://www.drupal.org/project/issues/<TBD>",
        "source": "http://github.com/lucidworks/fusion-search-drupal.git"
    },
    "require": {
        "php": "^7.1.3",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "lucidworks/fusion_connector": "*",
        "drupal/search_api": "*",
        "consolidation/annotated-command": "^2.12|^4.1",
        "maennchen/zipstream-php": "^1.2|^2.0",
        "lucidworks/fusion-search-solarium": "*",
        "laminas/laminas-stdlib": "^3.2"
    },
    "require-dev": {
        "phayes/geophp": "^1.2",
        "monolog/monolog": "^1.25",
        "drupal/devel": "3.x-dev",
        "drupal/facets": "1.x-dev",
        "drupal/geofield": "1.x-dev",
        "drupal/search_api_autocomplete": "1.x-dev",
        "drupal/search_api_location": "1.x-dev",
        "drupal/search_api_spellcheck": "3.x-dev"
    },
    "conflict": {
        "drupal/search_api_solr_multilingual": "<3.0.0"
    },
    "suggest": {
        "drupal/facets": "Provides faceted search.",
        "drupal/search_api_autocomplete": "Provides auto complete for search boxes.",
        "drupal/search_api_location": "Provides location searches.",
        "drupal/search_api_spellcheck": "Provides spell checking and 'Did You Mean?'."
    },
    "extra": {
        "drush": {
            "services": {
                "drush.services.yml": "^9"
            }
        }
    },
    "repositories": [
        {"type": "composer", "url": "https://repo.packagist.com/lucidworks/"},
        {"packagist.org": false}
    ]
}
